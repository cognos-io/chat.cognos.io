{
  "cSpell.words": [
    "ciphertext",
    "cognos",
    "compat",
    "ewan",
    "Ollama",
    "openai",
    "OWASP",
    "pocketbase",
    "secretbox",
    "testdata"
  ],
  "cSpell.ignoreWords": [
    "AIAPI",
    "Automigrate",
    "Upsert",
    "aimodel",
    "knadh",
    "koanf",
    "labstack",
    "migratecmd",
    "nekxd",
    "sashabaranov"
  ],
  "go.lintTool": "golangci-lint",
  "go.lintFlags": ["--fast"],
  "go.useLanguageServer": true,
  "gopls": {
    "formatting.gofumpt": true
  },
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": "\\.go$",
        "cmd": "go run github.com/segmentio/golines@latest ${file} -w -m 88"
      }
    ]
  }
}
